FROM python:3.11-slim-bookworm

# 1. ACTUALIZAR e instalar dependencias del sistema CRÍTICAS para WeasyPrint
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Bibliotecas ABSOLUTAMENTE NECESARIAS para WeasyPrint
    libpango-1.0-0 \
    libpangoft2-1.0-0 \
    libpangocairo-1.0-0 \
    libcairo2 \
    libcairo2-dev \
    libgdk-pixbuf-2.0-0 \
    libgdk-pixbuf2.0-0 \
    libgirepository-1.0-1 \
    libglib2.0-0 \
    libgobject-2.0-0 \
    libffi-dev \
    libharfbuzz0b \
    libharfbuzz-subset0 \
    libfontconfig1 \
    libfreetype6 \
    libxml2 \
    libxslt1.1 \
    libpng16-16 \
    libjpeg62-turbo \
    libtiff6 \
    libwebp7 \
    # Bibliotecas de desarrollo para compilación
    libcairo2-dev \
    libpango1.0-dev \
    libgdk-pixbuf2.0-dev \
    libffi-dev \
    libjpeg-dev \
    libtiff-dev \
    libwebp-dev \
    # Herramientas de compilación
    build-essential \
    pkg-config \
    wget \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# 2. Instalar librerías Python necesarias para la compilación de WeasyPrint
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir \
    cffi \
    pillow \
    cairocffi \
    setuptools

# 3. Establecer directorio de trabajo
WORKDIR /app

# 4. Copiar requirements.txt e instalar dependencias Python
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 5. Copiar el resto del código
COPY . .

# 6. Comando para iniciar (AJUSTA 'proyectoDjango' al nombre de tu proyecto)
CMD ["gunicorn", "proyectoDjango.wsgi:application", "--bind", "0.0.0.0:$PORT"]
