FROM python:3.11-bookworm

# 1. Instalar TODAS las dependencias del sistema que WeasyPrint necesita
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Bibliotecas CORE de WeasyPrint (CRÍTICAS)
    libpango-1.0-0 \
    libpangoft2-1.0-0 \
    libpangocairo-1.0-0 \
    libharfbuzz0b \
    libharfbuzz-gobject0 \
    libharfbuzz-icu0 \
    libcairo2 \
    libcairo-gobject2 \
    libgdk-pixbuf-2.0-0 \
    libgdk-pixbuf2.0-0 \
    libgirepository-1.0-1 \
    gir1.2-pango-1.0 \
    libglib2.0-0 \
    libgobject-2.0-0 \
    libffi8 \
    libfontconfig1 \
    libfreetype6 \
    libxml2 \
    libxslt1.1 \
    libpng16-16 \
    libjpeg62-turbo \
    libtiff6 \
    libwebp7 \
    libopenjp2-7 \
    # Bibliotecas de desarrollo PARA COMPILACIÓN
    libcairo2-dev \
    libpango1.0-dev \
    libgdk-pixbuf2.0-dev \
    libffi-dev \
    libjpeg-dev \
    libtiff-dev \
    libwebp-dev \
    libharfbuzz-dev \
    libfreetype6-dev \
    libxml2-dev \
    libxslt1-dev \
    libpng-dev \
    # Herramientas de compilación
    build-essential \
    pkg-config \
    python3-dev \
    # Gestión de fuentes
    fonts-dejavu-core \
    fonts-liberation \
    # Utilidades
    wget \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# 2. Instalar cairocffi y dependencias Python ANTES de requirements.txt
RUN pip install --no-cache-dir --upgrade pip setuptools wheel \
    && pip install --no-cache-dir \
    cffi==1.15.1 \
    cairocffi==1.6.1 \
    Pillow==10.1.0

# 3. Establecer directorio de trabajo
WORKDIR /app

# 4. Copiar requirements.txt (asegúrate de que tiene weasyprint)
COPY requirements.txt .

# 5. Instalar dependencias Python
RUN pip install --no-cache-dir -r requirements.txt

# 6. Copiar el resto del código
COPY . .

# 7. Comando para Railway (usa $PORT automático)
CMD gunicorn proyectoDjango.wsgi:application --bind 0.0.0.0:$PORT --workers 3